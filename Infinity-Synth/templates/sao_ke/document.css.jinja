:root {
  --page-width: 2433px;
  --page-height: 3508px;
  --page-scale: 0.32;
}

@page {
  size: A4;
  margin: 0;
}

html,
body {
  margin: 0;
  padding: 0;
  background: #ffffff;
  width: calc(var(--page-width) * var(--page-scale));
  height: calc(var(--page-height) * var(--page-scale));
  overflow: hidden;
  font-family: "Times New Roman", Times, serif;
  color: #703c46;
}

.page-wrap {
  width: calc(var(--page-width) * var(--page-scale));
  height: calc(var(--page-height) * var(--page-scale));
  overflow: hidden;
  background: #ffffff;
}

.page {
  position: relative;
  width: var(--page-width);
  height: var(--page-height);
  margin: 0;
  background: #ffffff;
  transform: scale(var(--page-scale));
  transform-origin: top left;
}

.block {
  position: absolute;
  box-sizing: border-box;
  border: 1px solid #b01576;
  padding: 0;
  overflow: hidden;
  color: #703c46;
  z-index: 10;
}

.artifact {
  position: absolute;
  box-sizing: border-box;
  z-index: 20;
}

.artifact.watermark {
  z-index: 5;
  opacity: 0.12;
}

.block.has-flush-header {
  padding-top: 0;
}

.header {
  font-weight: 800;
  font-size: 40px;
  margin: 0 0 6px 0;
  text-transform: uppercase;
  white-space: normal;
  word-break: break-word;
  overflow: hidden;
  line-height: 1.15;
  color: #000000;
}

.boxed-header.flush {
  position: static;
  width: 100%;
  box-sizing: border-box;
  margin: 0;
  padding: 10px 12px;
  background: #5bcc1c;
  color: #000000;
  border-bottom: 1px solid #b01576;
  white-space: normal;
  word-break: break-word;
  overflow: hidden;
  line-height: 1.15;
  font-size: 40px;
  font-weight: 800;
}

.content {
  white-space: pre-wrap;
  word-break: break-word;
  overflow: hidden;
  line-height: 1.15;
  font-size: 30px;
  padding: 8px;
}

.block.table {
  padding: 0;
  border: 0;
}

.block.table .content {
  height: 100%;
  padding: 0;
}

.content table {
  width: 100%;
  height: 100%;
  border-collapse: collapse;
  table-layout: fixed;
  margin: 0;
  border: 1px solid #b01576;
}

.content th {
  border: 1px solid #b01576;
  padding: 2px 3px 2px 0;
  text-align: left;
  vertical-align: top;
  line-height: 1.15;
  color: #c628a0;
  background: #7cd253;
}

.content td {
  border: 1px solid #b01576;
  padding: 2px 3px 2px 0;
  text-align: left;
  vertical-align: top;
  line-height: 1.15;
  color: #703c46;
}

.checkbox {
  display: flex;
  align-items: center;
  gap: 4px;
  font-size: 12px;
}

.checkbox-box {
  width: 12px;
  height: 12px;
  border: 1px solid #222;
  display: inline-block;
  position: relative;
}

.checkbox-mark {
  position: absolute;
  left: 1px;
  top: -1px;
  font-size: 12px;
  line-height: 12px;
}

.checkbox-label {
  display: inline-block;
}
